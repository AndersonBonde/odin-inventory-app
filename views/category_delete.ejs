<!DOCTYPE html>
<html>
  <head>
    <title><%= data.title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <script src="/javascripts/collapseButton.js" defer></script>
  </head>
  <body>
    <div class="container">
      <%- include('partials/sidebar-nav.ejs') %>
      <main>
        <h1><%= data.title %></h1>
        <h2><%= data.category.name %></h2>

        <% if (data.categoryItems.length) { %>
          <p>
            <strong>Delete the following items before attempting to delete this category.</strong>
          </p>
          <div style="margin-left: 20px; margin-top: 20px;">
            <h4>Items</h4>
            <ul>
              <% data.categoryItems.forEach((item) => { %>
                <li>
                  <a href="<%= item.url %>"><%= item.name %></a>
                </li>
              <% }) %>
            </ul>
          </div>
        <% } else { %>
          <p>Do you really want to delete this Category?</p>
        <% } %>

        <form action="" method="post">
          <div class="form-group">
            <input type="hidden" id="categoryid" name="categoryid" class="form-control" value=<%= data.category._id %>>
          </div>

          <a class="btn" href=<%= `/inventory/category/${data.category._id}` %>>Cancel</a>
          <button class="btn" type="submit">Delete</button>
        </form>
      </main>
    </div>
  </body>
</html>
